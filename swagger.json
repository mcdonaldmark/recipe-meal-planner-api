{
  "swagger": "2.0",
  "info": {
    "title": "Recipe & Meal Planner API",
    "description": "API for recipes, users, meal plans, and tags",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": ["http"],
  "securityDefinitions": {
    "googleOAuth": {
      "type": "oauth2",
      "authorizationUrl": "http://localhost:3000/auth/google",
      "flow": "implicit",
      "scopes": {}
    }
  },
  "paths": {
    "/users": {
      "get": {
        "tags": ["Users"],
        "description": "Get all users (Google login required)",
        "security": [{ "googleOAuth": [] }],
        "responses": {
          "200": { "description": "OK" },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "post": {
        "tags": ["Users"],
        "description": "Create a new user",
        "consumes": ["application/json"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["name", "email"],
              "properties": {
                "name": { "type": "string", "example": "John Doe" },
                "email": { "type": "string", "example": "john@example.com" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "400": { "description": "Bad Request" },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "tags": ["Users"],
        "description": "Get a user by ID",
        "security": [{ "googleOAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "type": "string" }],
        "responses": {
          "200": { "description": "OK" },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "put": {
        "tags": ["Users"],
        "description": "Update a user by ID",
        "consumes": ["application/json"],
        "security": [{ "googleOAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string", "example": "Updated Name" },
                "email": { "type": "string", "example": "updated@example.com" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "400": { "description": "Bad Request" },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Forbidden" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "tags": ["Users"],
        "description": "Delete a user by ID",
        "security": [{ "googleOAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "type": "string" }],
        "responses": {
          "200": { "description": "User deleted successfully" },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Forbidden" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/recipes": {
      "get": {
        "tags": ["Recipes"],
        "description": "Get all recipes",
        "security": [{ "googleOAuth": [] }],
        "responses": {
          "200": { "description": "OK" },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "post": {
        "tags": ["Recipes"],
        "description": "Create a new recipe",
        "consumes": ["application/json"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["name", "ingredients", "instructions"],
              "properties": {
                "name": { "type": "string", "example": "Spaghetti" },
                "ingredients": { "type": "array", "items": { "type": "string", "example": "Pasta" } },
                "instructions": { "type": "string", "example": "Boil pasta, add sauce" },
                "tags": { "type": "array", "items": { "type": "string", "example": "Italian" } }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "400": { "description": "Bad Request" },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/recipes/{id}": {
      "get": {
        "tags": ["Recipes"],
        "description": "Get a recipe by ID",
        "security": [{ "googleOAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "type": "string" }],
        "responses": {
          "200": { "description": "OK" },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "put": {
        "tags": ["Recipes"],
        "description": "Update a recipe by ID",
        "consumes": ["application/json"],
        "security": [{ "googleOAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string", "example": "Updated Recipe" },
                "ingredients": { "type": "array", "items": { "type": "string", "example": "Updated Ingredient" } },
                "instructions": { "type": "string", "example": "Updated instructions" },
                "tags": { "type": "array", "items": { "type": "string", "example": "Updated Tag" } }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "400": { "description": "Bad Request" },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Forbidden" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "tags": ["Recipes"],
        "description": "Delete a recipe by ID",
        "security": [{ "googleOAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "type": "string" }],
        "responses": {
          "200": { "description": "Recipe deleted successfully" },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Forbidden" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/mealplans": {
      "get": {
        "tags": ["MealPlans"],
        "description": "Get all meal plans (Google login required)",
        "security": [{ "googleOAuth": [] }],
        "responses": {
          "200": { "description": "OK" },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "post": {
        "tags": ["MealPlans"],
        "description": "Create a new meal plan",
        "consumes": ["application/json"],
        "security": [{ "googleOAuth": [] }],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["title", "mealType", "recipes"],
              "properties": {
                "title": { "type": "string", "example": "Weekly Plan" },
                "description": { "type": "string", "example": "My weekly meal plan" },
                "mealType": { "type": "string", "example": "Lunch" },
                "recipes": { "type": "array", "items": { "type": "string", "example": "recipeId123" } },
                "startDate": { "type": "string", "example": "2026-02-12" },
                "endDate": { "type": "string", "example": "2026-02-18" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "400": { "description": "Bad Request" },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/mealplans/{id}": {
      "get": {
        "tags": ["MealPlans"],
        "description": "Get a meal plan by ID",
        "security": [{ "googleOAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "type": "string" }],
        "responses": {
          "200": { "description": "OK" },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "put": {
        "tags": ["MealPlans"],
        "description": "Update a meal plan by ID",
        "consumes": ["application/json"],
        "security": [{ "googleOAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["title", "mealType", "recipes"],
              "properties": {
                "title": { "type": "string", "example": "Updated Plan" },
                "description": { "type": "string", "example": "Updated description" },
                "mealType": { "type": "string", "example": "Dinner" },
                "recipes": { "type": "array", "items": { "type": "string", "example": "recipeId456" } },
                "startDate": { "type": "string", "example": "2026-02-15" },
                "endDate": { "type": "string", "example": "2026-02-21" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "400": { "description": "Bad Request" },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Forbidden" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "tags": ["MealPlans"],
        "description": "Delete a meal plan by ID",
        "security": [{ "googleOAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "type": "string" }],
        "responses": {
          "200": { "description": "Meal plan deleted successfully" },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Forbidden" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/tags": {
      "get": {
        "tags": ["Tags"],
        "description": "Get all tags",
        "security": [{ "googleOAuth": [] }],
        "responses": {
          "200": { "description": "OK" },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "post": {
        "tags": ["Tags"],
        "description": "Create a new tag",
        "consumes": ["application/json"],
        "security": [{ "googleOAuth": [] }],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["name", "color"],
              "properties": {
                "name": { "type": "string", "example": "Italian" },
                "color": { "type": "string", "example": "#FF0000" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "400": { "description": "Bad Request" },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/tags/{id}": {
      "get": {
        "tags": ["Tags"],
        "description": "Get a tag by ID",
        "security": [{ "googleOAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "type": "string" }],
        "responses": {
          "200": { "description": "OK" },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "put": {
        "tags": ["Tags"],
        "description": "Update a tag by ID",
        "consumes": ["application/json"],
        "security": [{ "googleOAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string", "example": "Updated Tag" },
                "color": { "type": "string", "example": "#00FF00" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "400": { "description": "Bad Request" },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Forbidden" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "tags": ["Tags"],
        "description": "Delete a tag by ID",
        "security": [{ "googleOAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "type": "string" }],
        "responses": {
          "200": { "description": "Tag deleted successfully" },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Forbidden" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      }
    }
  }
}
